%li.project-added-contact(id='contact_#{contact.id}' class='persistent-contact' contact_id='#{contact.id}')
  = link_to contact.name, contact, :class => 'contact-name'
  .contact-card-wrapper
    = link_to "Contact Information", contact, :class => 'contact-card', :alt => 'Contact Information'
    = render :partial => 'projects/contact_hover', :locals => {:contact => contact}
  = link_to "Remove Contact", project_project_contact_path(@project, contact), :method => :delete, :confirm => 'Are you sure?', :remote => true, :class => "delete-button-small remove-contact"
  %input{:type => :hidden, :name => 'project[contact_ids][]', :value => contact.id}
  - if contact.organization_name && !contact.organization_name.blank?
    %p.contact-organization= contact.organization_name
  